apiVersion: v1
baseDomain: {{ dns.domain }}
compute:
- hyperthreading: Enabled
  name: worker
  replicas: 0
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: 3
metadata:
  name: {{ dns.clusterid }}
networking:
  clusterNetworks:
  - cidr: 10.254.0.0/16
    hostPrefix: 24
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
pullSecret: '{{ ocp_pull_secret }}'
sshKey: '{{ ocp_helper_keypair.public_key }} {{ ocp_helper_keypair.comment }}'
